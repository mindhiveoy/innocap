# Innocap Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# Firebase Configuration (Required)
# Get these from Firebase Console: https://console.firebase.google.com/
# Project Settings > General > Your apps > Web app > Config
# =============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# =============================================================================
# Google Sheets Integration (Required for /api/sheets endpoint)
# Create a service account: https://console.cloud.google.com/iam-admin/serviceaccounts
# =============================================================================
GOOGLE_SERVICE_ACCOUNT_EMAIL=
# Copy the private_key from the JSON file, keeping the \n characters
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=
GOOGLE_SPREADSHEET_ID=

# =============================================================================
# Google Analytics (Optional)
# Get from Google Analytics: https://analytics.google.com/
# Admin > Property > Data Streams > Web > Measurement ID
# =============================================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# =============================================================================
# Chat Integration (Optional)
# Configuration for the embedded chat widget
# =============================================================================
NEXT_PUBLIC_CHAT_BASE_URL=
NEXT_PUBLIC_CHAT_TENANT_ID=
NEXT_PUBLIC_CHAT_AGENT_ID=
